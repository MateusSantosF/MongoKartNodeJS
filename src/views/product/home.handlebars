
<h2>Produtos Cadastrados</h2>
<div class="container">

<table>
    <thead>
        <tr>
            <th>Nome</th>
            <th>Preço</th>
            <th>Descrição</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        {{#each products}}
        <tr>    
            <td>{{this.name}}</td>
            <td>{{this.price}}</td>
            <td>{{this.description}}</td>
            <td>
                <div class="actions">
                    <form action="/products/delete" method="post">
                        <input type="hidden" name="id" value="{{this._id}}">
                        <button type="submit">
                            <i class="bi bi-trash"></i>
                        </button>
                    </form>

                   <a href="products/edit/{{this._id}}"><i class="bi bi-pencil-square"></i></a>

                </div>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
<ul>
   
</ul>

</div>